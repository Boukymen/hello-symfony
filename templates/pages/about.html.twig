					var d    = new Date();
					var time = d.getSeconds() + 60 * d.getMinutes() + 3600 * d.getHours();

					var aigS = document.getElementById('aigS');
					var aigM = document.getElementById('aigM');
					var aigH = document.getElementById('aigH');
					aig();
					
					setInterval(function() {
						time++;
						aig();
						}, 1000);
				}
			});
