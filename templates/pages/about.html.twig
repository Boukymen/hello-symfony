			document.addEventListener('DOMContentLoaded', function () {
				if(document.getElementsByTagName('body')[0].style.MozTransform == ''
					|| document.getElementsByTagName('body')[0].style.WebkitTransform == ''
					|| document.getElementsByTagName('body')[0].style.OTransform == ''
					|| document.getElementsByTagName('body')[0].style.OTransform
					|| document.getElementsByTagName('body')[0].style.msTransform == ''
					|| document.getElementsByTagName('body')[0].style.transform == '')
				{
					function aig() {
						var S = document.querySelector('.aigS');
						var M = document.querySelector('.aigM');
						var H = document.querySelector('.aigH');
							S.style.MozTransform    =
							S.style.WebkitTransform =
							S.style.OTransform      =
							S.style.msTransform     =
							S.style.transform       = 'rotate(' + (time * 6) + 'deg)';
							M.style.MozTransform    =
							M.style.WebkitTransform =
							M.style.OTransform      =
							M.style.msTransform     =
							M.style.transform       = 'rotate(' + Math.round(time / 10) + 'deg)';
							H.style.MozTransform    =
							H.style.WebkitTransform =
							H.style.OTransform      =
							H.style.msTransform     =
							H.style.transform       = 'rotate(' + Math.round(time / 120) + 'deg)';
					}
					var aigS = document.createElement('img');
					aigS.setAttribute('src'  , '/images/aigS.png');
					aigS.setAttribute('class', 'aig aigS');
					aigS.setAttribute('alt'  , 'aiguille des secondes');
					aigS.setAttribute('style', 'left: 126px; top:25px; width: 0.45px;');
					// aigS.style.left = '283px';

					var aigM = document.createElement('img');
					aigM.setAttribute('src'  , '/images/aigM.png');
					aigM.setAttribute('class', 'aig aigM');
					aigM.setAttribute('alt'  , 'aiguille des minutes');
					aigM.setAttribute('style', 'left: 125px; top:54px;  width:4px;');
					// aigM.style.left = '278px';

					var aigH = document.createElement('img');
					aigH.setAttribute('src'  , '/images/aigH.png');
					aigH.setAttribute('class', 'aig aigH');
					aigH.setAttribute('alt'  , 'aiguille des heures');
					aigH.setAttribute('style', 'left: 125px; top:65px; width:4px;');
					// aigH.style.left = '278px';

					var horloge = document.getElementById('horloge');
					horloge.appendChild(aigS);
					horloge.appendChild(aigM);
					horloge.appendChild(aigH);
					// horloge.setAttribute('style', 'background: url(\'/images/cadran.png\');');
					horloge.setAttribute('style', 'background-size: 250px');
					
					// horloge.style.background = 'url(\'/images/cadran.png\')';
					// horloge.style.width = '200px';
